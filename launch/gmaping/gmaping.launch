<launch>
    <!-- Arguments -->
    <arg name="model" value="standard3"/>
    <arg name="set_base_frame" default="base_link"/>
    <arg name="set_odom_frame" default="odom"/>
    <arg name="set_map_frame" default="map"/>

    <!--- Run Gazebo of Robot -->
    <!--    <include file="$(find rc_gazebo)/launch/taske_model.launch"/>-->

    <!-- car_controller -->
    <!--    <include file="$(find car_controller)/launch/load_controller.launch"/>-->

    <!--    Gmapping-->
    <node pkg="gmapping" type="slam_gmapping" name="robot_slam_gmapping" output="screen">
        <remap from="scan" to="scan"/>
        <param name="base_frame" value="$(arg set_base_frame)"/>
        <param name="odom_frame" value="$(arg set_odom_frame)"/>
        <param name="map_frame" value="$(arg set_map_frame)"/>
        <rosparam command="load" file="$(find rc_navigation)/config/gmapping/gmapping_params.yaml"/>
    </node>

    <!-- rviz -->
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find rc_navigation)/config/rviz/rviz_config.rviz"/>

</launch>